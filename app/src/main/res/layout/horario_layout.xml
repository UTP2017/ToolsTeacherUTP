<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorIcons"
    android:layout_marginBottom="@dimen/activity_margin_midle"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="3dp"
        android:background="@color/colorDivider" />
    <LinearLayout
        android:paddingTop="@dimen/activity_vertical_margin_double"
        android:paddingBottom="@dimen/activity_vertical_margin_double"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hourBetweenTextView"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:text="20:15 - 21:45"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="1dp"
        android:background="@color/colorPrimaryText" />
    <LinearLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/courseNameTextView"
            android:textIsSelectable="true"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="wrap_content"
            android:text="Desarrollo de Software 1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/seccionNameTextView"
            android:layout_width="wrap_content"
            android:text="S20171003"
            android:textColor="@color/colorPrimaryText"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/labNameTextView"
            android:layout_width="wrap_content"
            android:text="E0209"
            android:textIsSelectable="true"
            android:textColor="@color/colorPrimary"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/sedeNameTextView"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:text="Sede Central"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
