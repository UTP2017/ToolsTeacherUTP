<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorDividerLight"
    android:layout_marginBottom="@dimen/activity_margin_midle"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="@dimen/activity_margin_midle"
        android:paddingBottom="@dimen/activity_margin_midle"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="24dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dateNumberTextView"
            android:layout_width="wrap_content"
            android:text="08"
            android:textSize="24sp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/dateDescTextView"
            android:text="Lun\nMar\n2017"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/horariosRecyclerView"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
